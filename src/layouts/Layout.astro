---
import Nav from "../components/Nav.astro";
import { SEO, type Props as SEOProps } from "astro-seo";
import { ViewTransitions } from "astro:transitions";

import "@/src/styles/globals.css";
import "@fontsource-variable/roboto-mono";
import "@fontsource-variable/inter";

export type LayoutProps = SEOProps;

type Props = LayoutProps;

const { props } = Astro;
---

<html lang="pt-BR" class="h-full">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />
    <SEO
      titleDefault="Ascent Software"
      titleTemplate="%s | Ascent Software"
      description="A Ascent organiza desenvolvedores freelancer para que seu projeto seja entregue com qualidade e no prazo. Se voce Ã© um desenvolvedor freelancer, a Ascent te ajuda a encontrar projetos que se encaixam no seu perfil."
      {...props}
    />
    <ViewTransitions />
  </head>
  <body transition:animate="slide">
    <Nav />
    <slot />
  </body>
</html>
