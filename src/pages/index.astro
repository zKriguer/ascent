---
import "@fontsource-variable/roboto-mono";
import "@fontsource-variable/inter";
import AttractionButton from "../components/AttractionButton";
import "@/src/styles/globals.css";
import Layout from "@/src/layouts/Layout.astro";
---

<Layout>
  <main
    class="h-full flex justify-center items-center flex-col gap-8 lg:gap-12 overflow-hidden"
  >
    <h1
      style={{ fontFamily: "Roboto Mono Variable" }}
      class="text-3xl lg:text-6xl font-black"
    >
      Ascent Software
    </h1>

    <div
      class="flex lg:flex-row flex-col w-full justify-center gap-12 items-center"
    >
      <div class="w-4/5 lg:w-[85ch] flex flex-col justify-center gap-8">
        <p class="text-center text-xl text-zinc-400">
          A <strong> Ascent</strong> organiza desenvolvedores freelancer para
          que seu projeto seja entregue com qualidade e no prazo. Se voce Ã© um
          desenvolvedor freelancer, a <strong> Ascent</strong> te ajuda a
          encontrar projetos que se encaixam no seu perfil.
        </p>

        <div class="grid grid-cols-2 gap-2">
          <AttractionButton isClient client:load />
          <AttractionButton isClient={false} client:load />
        </div>
      </div>
    </div>
  </main>
</Layout>
